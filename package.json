{
  "name": "aliyun-csfe-vscode-workbench",
  "displayName": "Aliyun CSFE vscode workbench",
  "description": "A vscode workbench developed by Aliyun CSFE team",
  "version": "0.0.1",
  "publisher": "@aliyun/csfe",
  "repository": {
    "type": "git",
    "url": "https://github.com/bian17888/aliyun-csfe-vscode-workbench.git"
  },
  "bugs": {
    "url": "https://github.com/bian17888/aliyun-csfe-vscode-workbench/issues"
  },
  "homepage": "https://github.com/bian17888/aliyun-csfe-vscode-workbench/blob/master/README.md",
  "icon": "images/csfe_logo.png",
  "galleryBanner": {
    "color": "#fff",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extend.insertLink",
    "onCommand:extend.insertFigure"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "csfe configuration",
      "type": "object",
      "properties": {
        "csfe.imagePathTemplate": {
          "type": "string",
          "default": "/images/${year}/${month}/",
          "description": "Specifies the folder containing images."
        },
        "csfe.filePathTemplate": {
          "type": "string",
          "default": "/file/${year}/${month}/",
          "description": "Specifies the folder containing files."
        }
      }
    },
    "commands": [
      {
        "command": "extend.insertLink",
        "title": "Insert Link"
      },
      {
        "command": "extend.insertFigure",
        "title": "Insert Figure"
      }
    ],
    "keybindings": [
      {
        "command": "extend.insertLink",
        "key": "shift+ctrl+l",
        "mac": "shift+cmd+l",
        "when": "editorTextFocus"
      },
      {
        "command": "extend.insertFigure",
        "key": "shift+ctrl+i",
        "mac": "shift+cmd+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
